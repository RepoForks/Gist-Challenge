<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyToolbar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GistOwner" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textSize">@dimen/material_list_title</item>
    </style>

    <style name="GistFile" parent="Base.TextAppearance.AppCompat.Body1"></style>

    <style name="GistSubheader" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
